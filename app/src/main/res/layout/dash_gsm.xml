<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout android:background="@color/colorFrag"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/style_dash_fragment"
    android:id="@+id/dash_gsm_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/dash_apn_fragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/gsm_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_margin="@dimen/normal_padding"
        android:text="@string/label_dash_gsm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gsm_title"
        android:id="@+id/sms_title"
        android:layout_marginLeft="@dimen/extra_margin"
        android:layout_marginTop="@dimen/normal_padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sms_value"
            android:hint="@string/label_dash_sms"/>
    </android.support.design.widget.TextInputLayout>


</android.support.constraint.ConstraintLayout>